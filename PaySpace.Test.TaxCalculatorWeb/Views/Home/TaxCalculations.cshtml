@model PaySpace.Test.TaxCalculatorWeb.ViewModels.Home.TaxCalculationsViewModel
@{
    ViewData["Title"] = "Tax Calculations";
}

<div class="text-center">
    <div class="col-sm-12 col-sm-offset-6">
        <h1>Tax Calculations</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Income</th>
                    <th scope="col">Postal Code</th>
                    <th scope="col">Tax Calculation Type</th>
                    <th scope="col">Calculated On</th>
                    <th scope="col">Tax Amount</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.TaxCalculations != null)
                    {
                        foreach (var item in Model.TaxCalculations)
                        {

                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Income</td>
                                <td>@item.PostalCode?.Code</td>
                                <td>@item.PostalCode?.TaxCalculationType</td>
                                <td>@item.CalculatedOn</td>
                                <td>@item.TaxAmount</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
